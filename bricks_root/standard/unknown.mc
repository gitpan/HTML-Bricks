%#----------------------------------------------------------------------------
%# freeze
%#----------------------------------------------------------------------------
<%method freeze>
<%perl>
  my ($rbrick) = @_;

  my $rbrick_data = $$rbrick{data}; 

  my %node;
  $node{name} = $$rbrick_data{name};
  $node{data} = $$rbrick_data{data}; 

  return \%node;  
  
</%perl>
</%method>

%#----------------------------------------------------------------------------
%# thaw
%#----------------------------------------------------------------------------
<%method thaw>
<%perl>
  my ($rbrick, $rnode) = @_;

  my %brick;
  $brick{name} = 'unknown';

  my $rbrick_data = $brick{data}; 
  $$rbrick_data{data} = $$rnode{data};
  $$rbrick_data{name} = $$rnode{name};

  return \%brick;  

</%perl>
</%method>

